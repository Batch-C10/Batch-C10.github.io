<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Viewfulldesc">



    <LinearLayout
        android:id="@+id/pen_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:weightSum="1"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/back"
            android:layout_weight=".1">

            <ImageView
                android:layout_width="25dp"
                android:layout_gravity="center"
                android:backgroundTint="#fff"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_height="25dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight=".8">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:fontFamily="@font/segoueui"
                android:id="@+id/placename"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/maps"
            android:layout_weight=".1">

            <ImageView
                android:layout_width="25dp"
                android:layout_gravity="center"
                android:backgroundTint="#fff"
                android:background="@drawable/ic_baseline_map_24"
                android:layout_height="25dp"/>


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/imageview"
        android:scaleType="fitXY"
        android:background="@drawable/ic_launcher_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:padding="5dp"
        android:gravity="bottom"
        android:textColor="#000"
        android:fontFamily="@font/segoueui"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/placename1"
        android:textStyle="bold"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/fulldesc"
                    android:padding="5dp"
                    android:fontFamily="@font/segoueui"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_baseline_audiotrack_24"
        tools:ignore="MissingConstraints" />


</LinearLayout>